<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
 <ui:style>
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
  <g:HTMLPanel>
    <div class='{style.underline}'>
      <h3 class='{style.header}'><ui:msg><span ui:field='displayRenderer' /></ui:msg></h3>
    </div>

    <table id='boundElementHolder' class='{style.fields}'>
      <tr id='questionText'><td><span class='{style.label}'>Question Text:</span></td><td><span ui:field='questionText'></span></td></tr>
      <tr id='picturePath'><td><span class='{style.label}'>Picture Path:</span></td><td><span ui:field='picturePath'></span></td></tr>
      <tr id='questionVersion'><td><span class='{style.label}'>Question Version:</span></td><td><span ui:field='questionVersion'></span></td></tr>
      <tr id='isAcceptedRewiever'><td><span class='{style.label}'>Is Accepted Rewiever:</span></td><td><span ui:field='isAcceptedRewiever'></span></td></tr>
      <tr id='isAcceptedAdmin'><td><span class='{style.label}'>Is Accepted Admin:</span></td><td><span ui:field='isAcceptedAdmin'></span></td></tr>
      <tr id='isActive'><td><span class='{style.label}'>Is Active:</span></td><td><span ui:field='isActive'></span></td></tr>
      <tr id='previousVersion'><td><span class='{style.label}'>Previous Version:</span></td><td><span ui:field='previousVersion'></span></td></tr>
      <tr id='keywords'><td><span class='{style.label}'>Keywords:</span></td><td><span ui:field='keywords'></span></td></tr>
      <tr id='questEvent'><td><span class='{style.label}'>Quest Event:</span></td><td><span ui:field='questEvent'></span></td></tr>
      <tr id='comment'><td><span class='{style.label}'>Comment:</span></td><td><span ui:field='comment'></span></td></tr>
      <tr id='questionType'><td><span class='{style.label}'>Question Type:</span></td><td><span ui:field='questionType'></span></td></tr>
      <tr id='mcs'><td><span class='{style.label}'>Mcs:</span></td><td><span ui:field='mcs'></span></td></tr>
      <tr id='answers'><td><span class='{style.label}'>Answers:</span></td><td><span ui:field='answers'></span></td></tr>
      <tr id='dateAdded'><td><span class='{style.label}'>Date Added:</span></td><td><span ui:field='dateAdded'></span></td></tr>
      <tr id='dateChanged'><td><span class='{style.label}'>Date Changed:</span></td><td><span ui:field='dateChanged'></span></td></tr>
      <tr id='rewiewer'><td><span class='{style.label}'>Rewiewer:</span></td><td><span ui:field='rewiewer'></span></td></tr>
      <tr id='autor'><td><span class='{style.label}'>Autor:</span></td><td><span ui:field='autor'></span></td></tr>
      <tr id='id'><td><span class='{style.label}'>Id:</span></td><td><span ui:field='id'></span></td></tr>
      <tr id='version'><td><span class='{style.label}'>Version:</span></td><td><span ui:field='version'></span></td></tr>
    </table>

  <div class="{style.bar}">
    <g:Button addStyleNames='{style.button}' ui:field='edit'>Edit</g:Button>
    <g:Anchor ui:field='delete'>Delete</g:Anchor>
   </div>
  </g:HTMLPanel>
</ui:UiBinder>
