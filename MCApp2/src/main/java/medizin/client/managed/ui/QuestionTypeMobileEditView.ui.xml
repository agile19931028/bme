<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:medizin.client.scaffold.ui'
  xmlns:a='urn:import:medizin.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='questionTypeName'><div class='{style.label}'>Question Type Name</div><div class='{style.value}'><g:TextBox ui:field='questionTypeName'/></div></div>
    <div id='isWeil'><div class='{style.label}'>Is Weil</div><div class='{style.value}'><g:CheckBox ui:field='isWeil'/></div></div>
    <div id='trueAnswers'><div class='{style.label}'>True Answers</div><div class='{style.value}'><g:IntegerBox ui:field='trueAnswers'/></div></div>
    <div id='falseAnswers'><div class='{style.label}'>False Answers</div><div class='{style.value}'><g:IntegerBox ui:field='falseAnswers'/></div></div>
    <div id='sumAnswers'><div class='{style.label}'>Sum Answers</div><div class='{style.value}'><g:IntegerBox ui:field='sumAnswers'/></div></div>
    <div id='maxLetters'><div class='{style.label}'>Max Letters</div><div class='{style.value}'><g:IntegerBox ui:field='maxLetters'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
