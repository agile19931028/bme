<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:medizin.client.scaffold.ui'
  xmlns:a='urn:import:medizin.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='responsiblePerson'><div class='{style.label}'>Responsible Person</div><div class='{style.value}'><g:ValueListBox ui:field='responsiblePerson'/></div></div>
    <div id='questionEvent'><div class='{style.label}'>Question Event</div><div class='{style.value}'><g:ValueListBox ui:field='questionEvent'/></div></div>
    <div id='assesment'><div class='{style.label}'>Assesment</div><div class='{style.value}'><g:ValueListBox ui:field='assesment'/></div></div>
    <div id='questionSum'><div class='{style.label}'>Question Sum</div><div class='{style.value}'><g:IntegerBox ui:field='questionSum'/></div></div>
    <div id='sort_order'><div class='{style.label}'>Sort_order</div><div class='{style.value}'><g:IntegerBox ui:field='sort_order'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
