<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:medizin.client.scaffold.ui'
  xmlns:a='urn:import:medizin.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='questionText'><div class='{style.label}'>Question Text</div><div class='{style.value}'><g:TextBox ui:field='questionText'/></div></div>
    <div id='picturePath'><div class='{style.label}'>Picture Path</div><div class='{style.value}'><g:TextBox ui:field='picturePath'/></div></div>
    <div id='questionVersion'><div class='{style.label}'>Question Version</div><div class='{style.value}'><g:DoubleBox ui:field='questionVersion'/></div></div>
    <div id='isAcceptedRewiever'><div class='{style.label}'>Is Accepted Rewiever</div><div class='{style.value}'><g:CheckBox ui:field='isAcceptedRewiever'/></div></div>
    <div id='isAcceptedAdmin'><div class='{style.label}'>Is Accepted Admin</div><div class='{style.value}'><g:CheckBox ui:field='isAcceptedAdmin'/></div></div>
    <div id='isActive'><div class='{style.label}'>Is Active</div><div class='{style.value}'><g:CheckBox ui:field='isActive'/></div></div>
    <div id='previousVersion'><div class='{style.label}'>Previous Version</div><div class='{style.value}'><g:ValueListBox ui:field='previousVersion'/></div></div>
    <div id='keywords'><div class='{style.label}'>Keywords</div><div class='{style.value}'><a:KeywordSetEditor ui:field='keywords'/></div></div>
    <div id='questEvent'><div class='{style.label}'>Quest Event</div><div class='{style.value}'><g:ValueListBox ui:field='questEvent'/></div></div>
    <div id='comment'><div class='{style.label}'>Comment</div><div class='{style.value}'><g:ValueListBox ui:field='comment'/></div></div>
    <div id='questionType'><div class='{style.label}'>Question Type</div><div class='{style.value}'><g:ValueListBox ui:field='questionType'/></div></div>
    <div id='mcs'><div class='{style.label}'>Mcs</div><div class='{style.value}'><a:McSetEditor ui:field='mcs'/></div></div>
    <div id='answers'><div class='{style.label}'>Answers</div><div class='{style.value}'><a:AnswerSetEditor ui:field='answers'/></div></div>
    <div id='dateAdded'><div class='{style.label}'>Date Added</div><div class='{style.value}'><d:DateBox ui:field='dateAdded'/></div></div>
    <div id='dateChanged'><div class='{style.label}'>Date Changed</div><div class='{style.value}'><d:DateBox ui:field='dateChanged'/></div></div>
    <div id='rewiewer'><div class='{style.label}'>Rewiewer</div><div class='{style.value}'><g:ValueListBox ui:field='rewiewer'/></div></div>
    <div id='autor'><div class='{style.label}'>Autor</div><div class='{style.value}'><g:ValueListBox ui:field='autor'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
