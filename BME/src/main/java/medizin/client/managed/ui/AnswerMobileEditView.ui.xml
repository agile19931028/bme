<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:medizin.client.scaffold.ui'
  xmlns:a='urn:import:medizin.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='dateAdded'><div class='{style.label}'>Date Added</div><div class='{style.value}'><d:DateBox ui:field='dateAdded'/></div></div>
    <div id='dateChanged'><div class='{style.label}'>Date Changed</div><div class='{style.value}'><d:DateBox ui:field='dateChanged'/></div></div>
    <div id='rewiewer'><div class='{style.label}'>Rewiewer</div><div class='{style.value}'><g:ValueListBox ui:field='rewiewer'/></div></div>
    <div id='autor'><div class='{style.label}'>Autor</div><div class='{style.value}'><g:ValueListBox ui:field='autor'/></div></div>
    <div id='answerText'><div class='{style.label}'>Answer Text</div><div class='{style.value}'><g:TextBox ui:field='answerText'/></div></div>
    <div id='isAnswerActive'><div class='{style.label}'>Is Answer Active</div><div class='{style.value}'><g:CheckBox ui:field='isAnswerActive'/></div></div>
    <div id='isPicture'><div class='{style.label}'>Is Picture</div><div class='{style.value}'><g:CheckBox ui:field='isPicture'/></div></div>
    <div id='isAnswerAcceptedReviewWahrer'><div class='{style.label}'>Is Answer Accepted Review Wahrer</div><div class='{style.value}'><g:CheckBox ui:field='isAnswerAcceptedReviewWahrer'/></div></div>
    <div id='isAnswerAcceptedAutor'><div class='{style.label}'>Is Answer Accepted Autor</div><div class='{style.value}'><g:CheckBox ui:field='isAnswerAcceptedAutor'/></div></div>
    <div id='isAnswerAcceptedAdmin'><div class='{style.label}'>Is Answer Accepted Admin</div><div class='{style.value}'><g:CheckBox ui:field='isAnswerAcceptedAdmin'/></div></div>
    <div id='validity'><div class='{style.label}'>Validity</div><div class='{style.value}'><g:ValueListBox ui:field='validity'/></div></div>
    <div id='picturePath'><div class='{style.label}'>Picture Path</div><div class='{style.value}'><g:TextBox ui:field='picturePath'/></div></div>
    <div id='question'><div class='{style.label}'>Question</div><div class='{style.value}'><g:ValueListBox ui:field='question'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
