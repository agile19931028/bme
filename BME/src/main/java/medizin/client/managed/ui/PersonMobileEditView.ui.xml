<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:medizin.client.scaffold.ui'
  xmlns:a='urn:import:medizin.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='name'><div class='{style.label}'>Name</div><div class='{style.value}'><g:TextBox ui:field='name'/></div></div>
    <div id='prename'><div class='{style.label}'>Prename</div><div class='{style.value}'><g:TextBox ui:field='prename'/></div></div>
    <div id='shidId'><div class='{style.label}'>Shid Id</div><div class='{style.value}'><g:TextBox ui:field='shidId'/></div></div>
    <div id='email'><div class='{style.label}'>Email</div><div class='{style.value}'><g:TextBox ui:field='email'/></div></div>
    <div id='alternativEmail'><div class='{style.label}'>Alternativ Email</div><div class='{style.value}'><g:TextBox ui:field='alternativEmail'/></div></div>
    <div id='phoneNumber'><div class='{style.label}'>Phone Number</div><div class='{style.value}'><g:TextBox ui:field='phoneNumber'/></div></div>
    <div id='isAdmin'><div class='{style.label}'>Is Admin</div><div class='{style.value}'><g:CheckBox ui:field='isAdmin'/></div></div>
    <div id='isAccepted'><div class='{style.label}'>Is Accepted</div><div class='{style.value}'><g:CheckBox ui:field='isAccepted'/></div></div>
    <div id='questionAccesses'><div class='{style.label}'>Question Accesses</div><div class='{style.value}'><a:QuestionAccessSetEditor ui:field='questionAccesses'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
